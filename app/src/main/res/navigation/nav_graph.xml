<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/suggestionsFragment">

    <fragment
        android:id="@+id/suggestionsFragment"
        android:name="com.vifrn.mygamesreviews.suggestions.SuggestionsFragment"
        android:label="fragment_suggestions"
        tools:layout="@layout/fragment_suggestions" >
        <action
            android:id="@+id/action_suggestionsFragment_to_searchResultsListFragment"
            app:destination="@id/searchResultsListFragment" />
        <action
            android:id="@+id/action_suggestionsFragment_to_myReviewsListFragment"
            app:destination="@id/myReviewsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchResultsListFragment"
        android:name="com.vifrn.mygamesreviews.search.SearchResultsListFragment"
        android:label="fragment_search_results_list"
        tools:layout="@layout/fragment_search_results_list" >
        <action
            android:id="@+id/action_searchResultsListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.vifrn.mygamesreviews.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_reviewFragment"
            app:destination="@id/reviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.vifrn.mygamesreviews.review.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" />
    <fragment
        android:id="@+id/myReviewsListFragment"
        android:name="com.vifrn.mygamesreviews.list.GameListFragment"
        android:label="fragment_my_reviews_list"
        tools:layout="@layout/fragment_game_list" >
        <action
            android:id="@+id/action_myReviewsListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>